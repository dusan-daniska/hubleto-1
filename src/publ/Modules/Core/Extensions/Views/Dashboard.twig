{% if app.isPro %}
  <div class="flex gap-2">
    {% for e in viewParams.extensions %}
      <a
        class="btn btn-transparent btn-large"
        href="{{ config.accountUrl }}/extensions/{{ e.urlBase }}"
      >
        <span class="icon"><i class="{{ e.icon }}"></i></span>
        <span class="text">{{ e.name }}</span>
      </a>
    {% endfor %}
  </div>
{% else %}
  <div class="alert-danger mb-2">
    {{ translate('You are using free version of Ceremony.') }}<br/>
    {{ translate('If you want to install extensions, you must upgrade to PRO.') }}
  </div>
  <a href="?simulate=up" class="btn btn-primary btn-large">
    <span class="icon"><i class="fas fa-cloud-arrow-up"></i></span>
    <span class="text">{{ translate('Upgrade to PRO') }}</span>
  </span>
{% endif %}