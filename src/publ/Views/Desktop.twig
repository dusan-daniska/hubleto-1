<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <link rel='shortcut icon' href='{{ config.url }}/app/assets/images/favicon.png'>
  <title>Ceremony CRM</title>

  <script>
    window.ConfigEnv = {
      'rewriteBase': '{{ config.rewriteBase }}',
      'url': '{{ config.url }}',
      'accountUrl': '{{ config.accountUrl }}',
    }
  </script>

  <script src='{{ config.url }}/adios/cache.js'></script>
  <script src='{{ config.url }}/app/assets/compiled/js/app.js'></script>

  <link rel="stylesheet" type="text/css" href="{{ config.url }}/app/assets/css/fontawesome-5.13.0.css">
  <link rel="stylesheet" type="text/css" href="{{ config.url }}/app/assets/compiled/css/app.css">

  <script>
    ADIOS.onAppLoaded(() => {
      globalThis.app.language = 'sk';
    });
  </script>

</head>

<body id="page-top">
  {% if (viewParams.showOnlyContentHtml) %} {{ contentHtml|raw }} {% else %}

    <button data-drawer-target="default-sidebar" data-drawer-toggle="default-sidebar" aria-controls="default-sidebar" type="button" class="inline-flex items-center p-2 mt-2 ms-3 text-sm text-gray-500 rounded-lg sm:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600">
      <span class="sr-only">Open sidebar</span>
      <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path clip-rule="evenodd" fill-rule="evenodd" d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z"></path>
      </svg>
    </button>

    <nav id="default-navbar"><div>
      <a class="flex items-center space-x-3 rtl:space-x-reverse" href="{{ config.accountUrl }}/..">
        <img src="{{ config.url }}/app/assets/images/logo.png" class="h-8">
        <span class="self-center text-l font-semibold whitespace-nowrap dark:text-white">
          Ceremony CRM
        </span>
      </a>
      <button data-collapse-toggle="default-navbar-mobile" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="navbar-default" aria-expanded="false">
        <span class="sr-only">Open main menu</span>
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
        </svg>
      </button>
      <div class="hidden w-full md:block md:w-auto" id="default-navbar-mobile">
        <ul class="flex font-sm gap-1">
          <li>
            <a class="btn btn-transparent" href="#">
              <span class="icon"><i class='fas fa-user-tie'></i></span>
              <span class="text">{{ user.login }}</span>
            </a>
          </li>
          <li>
            <a class="btn btn-transparent" href="{{ config.accountUrl }}/?sign-out">
              <span class="icon"><i class='fas fa-sign-out-alt'></i></span>
            </a>
          </li>
        </ul>
      </div>
    </div></nav>

    <aside id="default-sidebar">
      <nav>
        {% for item in viewParams.sidebar.level1Items %}
          {% if item.type == 'link' %}
            <a class="btn" href="{{ config.accountUrl }}/{{ item.url }}" title="{{ item.title }}">
              <span class="icon"><i class="{{ item.icon }}"></i></span>
            </a>
          {% elseif item.type == 'divider' %}
            <div class="divider"></div>
          {% endif %}
        {% endfor %}
      </nav>

      {% if viewParams.sidebar.level2Items|length > 0 %}
        <div>
          <ul>
            {% for item in viewParams.sidebar.level2Items %}
              {% if item.type == 'link' %}
                <a class="btn btn-light" href="{{ config.accountUrl }}/{{ item.url }}" title="{{ item.title }}">
                  <span class="icon"><i class="{{ item.icon }}"></i></span>
                  <span class="text">{{ item.title }}</span>
                </a>
              {% elseif item.type == 'heading_1' %}
                <h1>{{ item.title }}</h1>
              {% elseif item.type == 'heading_2' %}
                <h2>{{ item.title }}</h2>
              {% elseif item.type == 'divider' %}
                <div class="divider"></div>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      {% endif %}
    </aside>

    <div
      id="app-main-content"
      class="{% if viewParams.idLokalita == 0 %} sidebar-only-nav {% endif %}"
    >
      {{ contentHtml|raw }}
    </div>

  {% endif %}
</body>

</html>
