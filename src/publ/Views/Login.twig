<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <link rel='shortcut icon' href='{{ config.url }}/app/assets/images/favicon.png'>
  <title>Ceremony</title>

  <script src='{{ config.accountUrl }}/adios/cache.js'></script>

  <link rel="stylesheet" type="text/css" href="{{ config.url }}/app/assets/css/fontawesome-5.13.0.css">
  <link rel="stylesheet" type="text/css" href="{{ config.url }}/app/assets/compiled/css/app.css">
</head>

<body>

  <div id="sign-in-screen">
    <div class="inner">
      <div class="logo">
        <img src="{{ config.url }}/app/assets/images/logo.png" />
      </div>
      <div class="form">
        <div class="title">
          <h1 class="h4 mb-0">Ceremony</h1>
          <p class="mb-4">Ultimate CRM</p>
        </div>
        <form class="content" id="login_form" action="" method="POST">
          <input type=hidden name="language" id="language" value="{{ config.language }}">
          <input type=hidden name="authUser" id="authUser" value="1">

          <input
            type="text" name="login" value="{{ login }}" placeholder="Login" autofocus
            onkeypress='if (event.keyCode == 13) { document.getElementById("login_form").submit(); }'
          />

          <input
            type="password" name="password" placeholder="Password"
            onkeypress='if (event.keyCode == 13) { document.getElementById("login_form").submit(); }'
          />

          <div class="mt-2">
            <input type="checkbox" id="keep_logged_in" name="keep_logged_in" value="1" checked>
            <label for="keep_logged_in">Keep signed in</label>
          </div>

          <button type="submit" class="btn mt-4">
            <span class="icon"><i class="fas fa-arrow-right"></i></span>
            <span class="text">Sign in</span>
          </button>

        </form>
        {% if viewParams.login != "" %}
          <div class="small mt-4 text-danger text-center">
            Wrong login or password
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</body>
</html>
